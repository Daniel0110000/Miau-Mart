<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Favorites">

    <TextView
        android:id="@+id/my_favorites_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Favorites ❤️"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/number_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤(14)"
        android:textColor="#EB3223"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/my_favorites_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/input_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_search_background"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="@string/search_here"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColorHint="@color/gainsboro"
        android:padding="10dp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/number_favorites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image_fav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_test"
        android:scaleType="fitXY"
        android:theme="@style/profile_image_style"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/input_search"
        app:layout_constraintBottom_toBottomOf="@id/input_search"
        app:layout_constraintEnd_toEndOf="@id/input_search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/recycler_favorites_row_design"
        app:layout_constraintTop_toBottomOf="@id/input_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>